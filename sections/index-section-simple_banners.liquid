  }
  @media (max-width: 768px){
    {%- if b_i.custom_styles_text_1_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small{ {{ b_i.custom_styles_text_1_mobile_2 }} }{%- endif -%}
    {%- if b_i.custom_styles_text_2_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-large{ {{ b_i.custom_styles_text_2_mobile_2 }} }{%- endif -%}
    {%- if b_i.custom_styles_text_3_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small-3{ {{ b_i.custom_styles_text_3_mobile_2 }} }{%- endif -%}
  }
  
  {%- if b_i.show_custom_html and b_i.show_prem_btn -%}
  {%- if b_i.use_custom_html_below_text -%}
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-description-wrapper-main.text-left .custom-buttons{
    align-items: unset;
    justify-content: unset;
  }
  @media (min-width: 1602px){
    .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-description-wrapper-main .custom-buttons{
      margin-top: {{ b_i.buttons_top_offset }}px;
    }
  }
  @media (min-width: 1025px) and (max-width: 1601px){
    .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-description-wrapper-main .custom-buttons{
      margin-top: {{ b_i.buttons_top_offset_medium }}px;
    }
  }
  @media (max-width: 1024px){
    .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-description-wrapper-main .custom-buttons{
      margin-top: {{ b_i.buttons_top_offset_mobile }}px;
    }
  }
  {%- endif -%}
  
  {%- if b_i.show_prem_btn_1 -%}
  {%- assign bg_alpha = b_i.background_alpha_1 | divided_by: 100.00 -%}
  {%- assign bg_color = b_i.cbtnbg_1 | color_modify: 'alpha', bg_alpha -%}
  {%- assign bg_alpha_a = b_i.background_alpha_a_1 | divided_by: 100.00 -%}
  {%- assign bg_color_a = b_i.acbtnbg_1 | color_modify: 'alpha', bg_alpha_a -%}
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .custom-buttons .custom-buttons-btn-1{
    background:{{ bg_color }};
    color:{{ b_i.cbtntext_1 }};
    {{ b_i.btn_custom_styles_1 }}
  }
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .custom-buttons .custom-buttons-btn-1:hover{
    background:{{ bg_color_a }};
    color:{{ b_i.acbtntext_1 }};
    {{ b_i.btn_custom_styles_hover_1 }}
  }
  {%- endif -%}
  {%- if b_i.show_prem_btn_2 -%}
  {%- assign bg_alpha = b_i.background_alpha_2 | divided_by: 100.00 -%}
  {%- assign bg_color = b_i.cbtnbg_2 | color_modify: 'alpha', bg_alpha -%}
  {%- assign bg_alpha_a = b_i.background_alpha_a_2 | divided_by: 100.00 -%}
  {%- assign bg_color_a = b_i.acbtnbg_2 | color_modify: 'alpha', bg_alpha_a -%}
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .custom-buttons .custom-buttons-btn-2{
    background:{{ bg_color }};
    color:{{ b_i.cbtntext_2 }};
    {{ b_i.btn_custom_styles_2 }}
  }
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .custom-buttons .custom-buttons-btn-2:hover{
    background:{{ bg_color_a }};
    color:{{ b_i.acbtntext_2 }};
    {{ b_i.btn_custom_styles_hover_2 }}
  }
  {%- endif -%}
  {%- endif -%}
  
  {%- if b_i.show_mask -%}
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description{
    z-index: 2;
  }
  .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box:after {
    content: "";
    {%- assign alpha = b_i.show_mask_alpha | divided_by: 100.00 -%}
    background: {{ b_i.show_mask_color | color_modify: 'alpha', alpha }};
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }
  {%- endif -%}
  
  {%- if b_i.mobile_position != 'use_main_position' -%}
  @media (max-width: 1024px){
    .simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description{
      {%- case b_i.mobile_position -%}
      {%- when 'tt-point-v-t' -%}
      -webkit-align-items: flex-start;
      -ms-flex-align: start;
      align-items: flex-start;
      {%- when 'tt-point-v-b' -%}
      -webkit-align-items: flex-end;
      -ms-flex-align: end;
      align-items: flex-end;
      {%- else -%}
      -webkit-align-items: center;
      -ms-flex-align: center;
      align-items: center;
      {%- endcase -%}
      -webkit-justify-content: center;
      -ms-flex-pack: center;
      justify-content: center;
      -webkit-align-content: center;
      -ms-flex-line-pack: center;
      align-content: center;
    }
  }
  {%- endif -%}  

  {%- endfor -%}
</style>


