    padding-top: 0;
    padding-bottom: 0;
  }
  {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
  {%- if b_i.use_main_bg_color -%}
  .simplebanners{{ section.id }} .promoitem{{ block.id }}{
    background-color: {{ b_i.main_bg_color }};
  }
  {%- endif -%}
  {%- if b_i.textbackgroundstyles != "" -%}
