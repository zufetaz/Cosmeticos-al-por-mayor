  @media (min-width: 1025px) and (max-width: 1601px){
    {%- if b_i.custom_styles_text_1_2 != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small{ {{ b_i.custom_styles_text_1_2 }} }{%- endif -%}
    {%- if b_i.custom_styles_text_2_2 != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-large{ {{ b_i.custom_styles_text_2_2 }} }{%- endif -%}
    {%- if b_i.custom_styles_text_3_2 != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small-3{ {{ b_i.custom_styles_text_3_2 }} }{%- endif -%}
  }
  @media (max-width: 1024px){
    {%- if b_i.custom_styles_text_1_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small{ {{ b_i.custom_styles_text_1_mobile }} }{%- endif -%}
    {%- if b_i.custom_styles_text_2_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-large{ {{ b_i.custom_styles_text_2_mobile }} }{%- endif -%}
    {%- if b_i.custom_styles_text_3_mobile != "" -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small-3{ {{ b_i.custom_styles_text_3_mobile }} }{%- endif -%}
  }
  @media (max-width: {{ b_i.responsivepoint }}px){
    {%- if b_i.mobile_not_show_text_1 -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-small{display: none !important}{%- endif -%}
    {%- if b_i.mobile_not_show_text_2 -%}.simplebanners{{ section.id }} .promoitem{{ block.id }} .tt-promo-box .tt-description .tt-title-large{display: none !important}{%- endif -%}
