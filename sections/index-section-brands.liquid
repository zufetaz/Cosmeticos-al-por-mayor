{%- assign item = section.settings -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent">
  <div class="container{% if item.fullwidth %}-fluid{% endif %}" data-sectionname="index_brands">
    {%- if item.show_title -%}
    <div class="tt-block-title{% if item.title_to_left %} text-left{% endif %}">
      <h2 class="tt-title">{{ item.text1 }}</h2>
      {%- unless item.text2 == '' -%}<div class="tt-description">{{ item.text2 }}</div>{%- endunless -%}
    </div>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
    <div class="row tt-carousel-brands{% if item.useimageopacityonhover %} useimageopacityonhover{% endif %} arrow-location-center-02 tt-arrow-hover slick-animated-show-js" data-slick='{"slidesToShow": {{ item.toshow }}, "slidesToScroll": {{ item.step }}, "autoplay": {{ item.module_autoplay }}, "autoplaySpeed": {{ item.delay_time }}}'>
      {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
      <div {{ block.shopify_attributes }}>
        <a href="{{ b_i.link }}">
          {%- if b_i.image != blank -%}{% assign img_url = b_i.image | img_url: 'large' %}
          {%- else -%}{% assign img_url = 'template_brand.png' | asset_url %}
          {%- endif -%}
          <img src="{{ img_url }}" alt="{{ b_i.image.alt }}">
        </a>
      </div>
      {%- endfor -%}
    </div>
    {%- else -%}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {%- endif -%}
  </div>
</div>


