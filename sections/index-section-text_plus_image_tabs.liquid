{%- assign item = section.settings -%}
{%- assign sectionid = section.id -%}
{%- assign tabs = '' -%}
{%- assign tabscont = '' -%}
{%- assign blockid = '' -%}

<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %} texttabssection container-indent tpisection{{ section.id }}">
  {% if item.usebgcolor %}<div class="layout-box01-wrapper"{% if item.showbgimage_bg %} style="background-image: url({{ item.image_bg | img_url: '2048x' }});"{% endif %}>{% endif %}
    <div class="container{% if item.fullwidth %}-fluid{% endif %}">
      {%- if item.show_title -%}
      <div class="tt-block-title{% if item.title_to_left %} text-left{% endif %}{% if item.boxed_title and item.fullwidth %} container{% endif %}">
        {%- unless item.text1 == '' -%}<div class="tt-description">{{ item.text1 }}</div>{%- endunless -%}
        {%- unless item.text2 == '' -%}<h2 class="tt-title">{{ item.text2 }}</h2>{%- endunless -%}
      </div>
      {%- endif -%}
      
      {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
      
      {% capture val %}{{ b_i.title }}{% endcapture %}
      {% assign tabs = tabs | append: val | append: "%%|%%" %}
      
      {%- capture val -%}
      <div class="tpisectionitem{{ block.id }} row tt-layout-box01{% if b_i.reverse %} flex-row-reverse{% endif %} {{ b_i.contentalign }}{% if b_i.column_in_center %} justify-content-center{% endif %}">
        <div class="col-img col-md-{{ b_i.grid | split: '.' | first }}{% unless b_i.showimage %} d-sm-none-custom{% endunless %} respimgsize{% if b_i.showimage == false %} hide{% endif %}">
          {% if b_i.showimage %}
          {%- if b_i.image == blank -%}{%- include "get_svg" type:'image' size:'580x400' -%}
          {%- else -%}
          <img class="lazyload"
               data-mainimage="{{ b_i.image | img_url: '100x100' | replace: '100x100', 'respimgsize' }}"
               data-width="{{ b_i.image.width }}"
               alt="{{ b_i.image.alt }}">
          {%- endif -%}
          {% endif %}
        </div>
        <div class="col-description col-md-{{ b_i.grid | split: '.' | last }} text-{{ b_i.textalign }}">
          {%- if b_i.text1 != "" -%}<div class="tt-text1">{{ b_i.text1 }}</div>{%- endif -%}
          {%- if b_i.text2 != "" -%}<h6 class="tt-title">{{ b_i.text2 }}</h6>{%- endif -%}
          {%- if b_i.text3 != "" -%}<p class="tt-text3">{{ b_i.text3 }}</p>{%- endif -%}
          {%- if b_i.showbtn -%}
          {%- if b_i.showbtn_aslink -%}        
          <a href="{{ b_i.btnurl }}"
             class="hover-underline{% if b_i.underlinebydefault %} underlinebydefault{% endif %} btn-section-css"
             >{{ b_i.btntext }}</a>
          {%- else -%}
          <a href="{{ b_i.btnurl }}"
             class="btn btn-section-css"
             style="background:{{ b_i.bg_color }}; color:{{ b_i.cbtntext }};" data-bgc="{{ b_i.bg_color }}" data-abgc="{{ b_i.bg_color_a }}" data-c="{{ b_i.cbtntext }}" data-ac="{{ b_i.cbtntext_a }}" data-hovercolors
             >{{ b_i.btntext }}</a>
          {%- endif -%}
          {%- endif -%}
        </div>
      </div>
      {%- endcapture -%}
      {%- assign tabscont = tabscont | append: val | append: "%%|%%" -%}
      {%- endfor -%}
      
      {%- assign tabs = tabs | split: "%%|%%" -%}
      {%- assign tabscont = tabscont | split: "%%|%%" -%}
      
      {%- if section.blocks.size > 1 -%}
      <div class="tabs-box textplusimagetabs">
        <ul class="nav nav-tabs nav-tabs__default02" role="tablist"{% if item.module_autoplay %} data-customtabsdelay="{{ item.delay_time }}"{% endif %}>
          {%- for _tabs in tabs -%}
          <li class="nav-item">
            <a class="nav-link{% if forloop.first %} show active{% endif %}" data-toggle="tab" href="#tt-tab-0{{ forloop.index }}{{ sectionid }}" role="tab"><span>{{ _tabs }}</span></a>
          </li>
          {%- endfor -%}
        </ul>
        <div class="tab-content tab-content__default02">
          {%- for _tabscont in tabscont -%}
          <div class="tab-pane{% if forloop.first %} active{% endif %} fade" id="tt-tab-0{{ forloop.index }}{{ sectionid }}" role="tabpanel">
            {{ _tabscont }}
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- else -%}{{ tabscont[0] }}
      {%- endif -%}

      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
    </div>
  {% if item.usebgcolor %}</div>{% endif %}
</div>

