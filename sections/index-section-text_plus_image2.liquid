{%- assign item = section.settings -%}

<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent tpi2section{{ section.id }}">
  {% if item.usebgcolor %}<div class="layout-box02-wrapper"{% if item.usemobilepadforimage %} data-mobiele-indent="180"{% endif %}{% if item.showbgimage_bg %} style="background-image: url({{ item.image_bg | img_url: '2048x' }});"{% endif %}>{% endif %}
    <div class="container{% if item.fullwidth %}-fluid{% endif %}">
      <div class="row tt-layout-box02{% if item.reverse %} flex-row-reverse{% endif %} {{ item.contentalign }}">
        <div class="col-img col-md-6 respimgsize">
          {% if item.showimage %}
          {%- if item.image == blank -%}{%- include "get_svg" type:'image' size:'580x400' -%}
          {%- else -%}
          <img class="lazyload"
               data-mainimage="{{ item.image | img_url: '100x100' | replace: '100x100', 'respimgsize' }}"
               alt="{{ item.image.alt }}">
          {%- endif -%}
          {% endif %}
        </div>
        <div class="col-description col-md-6 text-{{ item.textalign }}">
          <div class="description-indent">
            {%- if item.text1 != "" -%}<h6 class="tt-title">{{ item.text1 }}</h6>{%- endif -%}
            {%- if item.text2 != "" -%}<p>{{ item.text2 }}</p>{%- endif -%}
            {%- if item.showbtn -%}
            <p>
              {%- if item.showbtnwithlink -%}
              <a href="{{ item.btnurl }}"
                 class="tt-custom-link{% if item.underlinebydefault %} underlinebydefault{% endif %}"
                 >{{ item.btntext }}</a>
              {%- else -%}
              <a href="{{ item.btnurl }}"
                 class="btn"
                 style="background:{{ item.bg_color }}; color:{{ item.cbtntext }};" data-bgc="{{ item.bg_color }}" data-abgc="{{ item.bg_color_a }}" data-c="{{ item.cbtntext }}" data-ac="{{ item.cbtntext_a }}" data-hovercolors
                 >{{ item.btntext }}</a>
              {%- endif -%}
            </p>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  {% if item.usebgcolor %}</div>{% endif %}
</div>

<style>
  .tpi2section{{ section.id }} .col-description .description-indent{
    margin-top: {{ item.textoffsettop }}px;
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .col-description{
    font-weight: {{ item.fontweighttext2 }};
    color: {{ item.colortext2 }};
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-title{
    font-weight: {{ item.fontweighttext1 }};
    color: {{ item.colortext1 }};
  }
  
  .tpi2section{{ section.id }} .tt-layout-box02 .tt-custom-link {
    color: {{ item.cbtntext }};
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .tt-custom-link:before {
    background-color: {{ item.cbtntext_a }};
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .tt-custom-link:hover {
    color: {{ item.cbtntext_a }};
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .tt-custom-link.underlinebydefault:before{
    width: 100%;
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .tt-custom-link.underlinebydefault:hover:before{
    width: 0%;
  }
  
  @media (min-width: 1025px){
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description{
      font-size: {{ item.fontsizetext2 }}px;
      line-height: {{ item.lineheighttext2 }}px;
    }
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-title{
      font-size: {{ item.fontsizetext1 }}px;
      line-height: {{ item.lineheighttext1 }}px;
      padding: 0 0 {{ item.bottompaddingtext1 }}px 0;
    }
  }
  @media (max-width: 1024px){
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description{
      font-size: {{ item.fontsizetext2_mobile }}px;
      line-height: {{ item.lineheighttext2_mobile }}px;
    }
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-title{
      font-size: {{ item.fontsizetext1_mobile }}px;
      line-height: {{ item.lineheighttext1_mobile }}px;
      padding-bottom: {{ item.bottompaddingtext1_mobile }}px;
    }
  }
  .tpi2section{{ section.id }} .layout-box02-wrapper{
    background-color: {{ item.bgco }};
    background-repeat: no-repeat;
    background-size: {{ item.imagesize_bg }};
    background-position: {{ item.imagealign_bg }};
  }
  .tpi2section{{ section.id }} .tt-layout-box02:not(.flex-row-reverse) .col-description{
    padding-left: {{ item.textoffset }}px;
  }
  .tpi2section{{ section.id }} .tt-layout-box02.flex-row-reverse .col-description:last-child{
    padding-right: {{ item.textoffset }}px;
  }
  {% if item.btn_custom_styles != '' %}
  .tpi2section{{ section.id }} .tt-layout-box02 .col-description .btn{
    {{ item.btn_custom_styles }}
  }
  {% endif %}
  {% if item.btn_custom_styles_hover != '' %}
  .tpi2section{{ section.id }} .tt-layout-box02 .col-description .btn:hover{
    {{ item.btn_custom_styles_hover }}
  }
  {% endif %}
  @media (min-width: 1025px){
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .btn,
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-custom-link{
      margin-top: {{ item.buttonpadding }}px;
    }
    .tpi2section{{ section.id }} .layout-box02-wrapper{
      padding-top: {{ item.bgdepad }}px;
      padding-bottom: {{ item.bgdepad_2 }}px;
    }
  }
  @media (max-width: 1024px){
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .btn,
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-custom-link{
      margin-top: {{ item.buttonpadding_mobile }}px;
    }
    .tpi2section{{ section.id }} .layout-box02-wrapper{
      padding-top: {{ item.bgmopad }}px;
      padding-bottom: {{ item.bgmopad_2 }}px;
    }
  }
  .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-custom-link {
    font-size: {{ item.linkfontsize }}px;
    font-weight: {{ item.linkfontweight }};
  }
  @media (max-width: 790px){
    .tpi2section{{ section.id }} .tt-layout-box02 .col-description .tt-custom-link {
      font-size: {{ item.linkfontsize_m }}px;
    }
  }
  
  {% if item.usebgcolor and item.usemiheight %}
  @media (min-width: 791px){
    .tpi2section{{ section.id }} > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight2 }}px;
    }
  }
  @media (min-width: 1200px){
    .tpi2section{{ section.id }} > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight3 }}px;
    }
  }
  @media (max-width: 790px){
    .tpi2section{{ section.id }} > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight1 }}px;
    }
  }
  {% endif %}

</style>

