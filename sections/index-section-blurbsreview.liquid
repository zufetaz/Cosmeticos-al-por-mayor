            <rect x="24" width="22" height="22" fill="#D4D4D4"/>
            <path d="M35 1L37.3607 8.25735H45L38.8197 12.7426L41.1803 20L35 15.5147L28.8197 20L31.1803 12.7426L25 8.25735H32.6393L35 1Z" fill="white"/>
            <rect x="48" width="22" height="22" fill="#D4D4D4"/>
            <path d="M59 1L61.3607 8.25735H69L62.8197 12.7426L65.1803 20L59 15.5147L52.8197 20L55.1803 12.7426L49 8.25735H56.6393L59 1Z" fill="white"/>
            <rect x="72" width="22" height="22" fill="#D4D4D4"/>
            <rect x="72" width="11" height="22" fill="#D4D4D4"/>
            <path d="M83 1L85.3607 8.25735H93L86.8197 12.7426L89.1803 20L83 15.5147L76.8197 20L79.1803 12.7426L73 8.25735H80.6393L83 1Z" fill="white"/>
            <rect x="96" width="22" height="22" fill="#D4D4D4"/>
            <path d="M107 1L109.361 8.25735H117L110.82 12.7426L113.18 20L107 15.5147L100.82 20L103.18 12.7426L97 8.25735H104.639L107 1Z" fill="white"/>
          </svg>
          <div class="tt-trim">
            <svg width="118" height="22" viewBox="0 0 118 22" fill="none" class="activestarscolor">
              <rect width="22" height="22" fill="#FFBA2E"/>
              <path d="M11 1L13.3607 8.25735H21L14.8197 12.7426L17.1803 20L11 15.5147L4.81966 20L7.18034 12.7426L1 8.25735H8.63932L11 1Z" fill="white"/>
              <rect x="24" width="22" height="22" fill="#FFBA2E"/>
              <path d="M35 1L37.3607 8.25735H45L38.8197 12.7426L41.1803 20L35 15.5147L28.8197 20L31.1803 12.7426L25 8.25735H32.6393L35 1Z" fill="white"/>
              <rect x="48" width="22" height="22" fill="#FFBA2E"/>
              <path d="M59 1L61.3607 8.25735H69L62.8197 12.7426L65.1803 20L59 15.5147L52.8197 20L55.1803 12.7426L49 8.25735H56.6393L59 1Z" fill="white"/>
              <rect x="72" width="22" height="22" fill="#FFBA2E"/>
              <rect x="72" width="11" height="22" fill="#FFBA2E"/>
              <path d="M83 1L85.3607 8.25735H93L86.8197 12.7426L89.1803 20L83 15.5147L76.8197 20L79.1803 12.7426L73 8.25735H80.6393L83 1Z" fill="white"/>
              <rect x="96" width="22" height="22" fill="#FFBA2E"/>
              <path d="M107 1L109.361 8.25735H117L110.82 12.7426L113.18 20L107 15.5147L100.82 20L103.18 12.7426L97 8.25735H104.639L107 1Z" fill="white"/>
            </svg>
          </div>
        </div>
        {% endif %}

        {% if b_i.title != '' %}<div class="obj-data02__title">{% if b_i.url == blank %}{{ b_i.title }}{% else %}<a href="{{ b_i.url }}">{{ b_i.title }}</a>{% endif %}</div>{% endif %}
        {% if b_i.desc != '' %}<div class="obj-data02__text">{{ b_i.desc }}</div>{% endif %}

        {%- if b_i.usemedia -%}
        <div class="obj-data02__img">
          {%- assign useimagesize = b_i.useimagesize | append: "px" -%}
          {%- assign retina = b_i.useimagesize | split: 'x' | last | times: 2 -%}
          {%- assign retina = retina | append: 'x' | append: retina -%}
          {%- if b_i.image == blank -%}{%- include "get_svg" type:'image' size:useimagesize -%}
          {%- else -%}
          <img class="lazyload"
               data-src="{{ b_i.image | img_url: retina }}"
               alt="{{ b_i.image.alt }}">
          {%- endif -%}
        </div>
        {%- endif -%}

        {% if b_i.descauth != '' %}<div class="obj-data02__author">{{ b_i.descauth }}</div>{% endif %}
        {% if b_i.descdate != '' %}<div class="obj-data02__data">{{ b_i.descdate }}</div>{% endif %}
      </div>
      {% if item.itemsinrow == "row-col-3" %}</div>{% endif %}
      {%- endfor -%}
      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}

    </div>
  </div>
  {% if item.usebgcolor %}</div>{% endif %}
</div>


<style>
  {% if item.usebgcolor %}
  .blurbsreview{{ section.id }} > div{
    background-color: {{ item.bgco }};
    background-repeat: no-repeat;
    background-size: {{ item.imagesize }};
    background-position: {{ item.imagealign }};
  }
  
  @media (min-width: 1025px){
    .blurbsreview{{ section.id }} > div{
      padding-top: {{ item.bgdepad }}px;
      padding-bottom: {{ item.bgdepad_2 }}px;
    }
  }
  @media (max-width: 1024px){
    .blurbsreview{{ section.id }} > div{
      padding-top: {{ item.bgmopad }}px;
      padding-bottom: {{ item.bgmopad_2 }}px;
    }
  }
  {% if item.usemiheight %}
  @media (min-width: 791px){
    .blurbsreview{{ section.id }} > div > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight2 }}px;
    }
  }
  @media (min-width: 1200px){
    .blurbsreview{{ section.id }} > div > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight3 }}px;
    }
  }
  @media (max-width: 790px){
    .blurbsreview{{ section.id }} > div > div > .row{
      align-items: center;
      min-height: {{ item.backgroundminheight1 }}px;
    }
  }
  {% endif %}
  {% endif %}

  .blurbsreview{{ section.id }} svg.basestarscolor path{
    fill: {{ item.colorstarsreview }};
  }
  .blurbsreview{{ section.id }} svg.activestarscolor path{
    fill: {{ item.colorstarsreviewa }};
  }
  .blurbsreview{{ section.id }} svg.basestarscolor rect{
    fill: {{ item.colorreview }};
  }
  .blurbsreview{{ section.id }} svg.activestarscolor rect{
    fill: {{ item.colorreviewa }};
  }
  .blurbsreview{{ section.id }} .obj-data02 .obj-data02__img img {
    border-radius: {{ item.img_round }}px;
  }
  .blurbsreview{{ section.id }} .obj-data02{
    padding: {{ item.blurbpadding }};
    border-radius: {{ item.bg_round }}px;
  }
  .blurbsreview{{ section.id }} .tt-block-title{
    padding-bottom: {{ item.titlepadding }}px;
  }
  .blurbsreview{{ section.id }} .tt-block-title .tt-title{
    font-size: {{ item.fontsizemtitle }}px;
    line-height: {{ item.lineheightmtitle }}px;
    font-weight: {{ item.fontweightmtitle }};
    color: {{ item.colortext1 }};
  }
  .blurbsreview{{ section.id }} .tt-block-title .tt-description{
    margin-top: {{ item.toppaddingmdesc }}px;
    font-size: {{ item.fontsizemdesc }}px;
    line-height: {{ item.lineheightmdesc }}px;
    font-weight: {{ item.fontweightmdesc }};
    color: {{ item.colortext2 }};
  }
  .blurbsreview{{ section.id }} .obj-data02__title {
    margin-top: {{ item.toppaddingititle }}px;
    font-size: {{ item.fontsizeititle }}px;
    line-height: {{ item.lineheightititle }}px;
    font-weight: {{ item.fontweightititle }};
  }
  .blurbsreview{{ section.id }} .obj-data02__text {
    margin-top: {{ item.toppaddingidesc }}px;
    font-size: {{ item.fontsizeidesc }}px;
    line-height: {{ item.lineheightidesc }}px;
    font-weight: {{ item.fontweightidesc }};
  }  
  .blurbsreview{{ section.id }} .obj-data02__author {
    margin-top: {{ item.toppaddingauthorreview }}px;
    font-size: {{ item.fontsizeauthorreview }}px;
    line-height: {{ item.lineheightauthorreview }}px;
    font-weight: {{ item.fontweightauthorreview }};
  }
  .blurbsreview{{ section.id }} .obj-data02__data {
    margin-top: {{ item.toppaddingdate }}px;
    font-size: {{ item.fontsizedate }}px;
    line-height: {{ item.lineheightdate }}px;
    font-weight: {{ item.fontweightdate }};
  }
  .obj-data02 .obj-data02__img { 
    margin-top: {{ item.toppaddingimage }}px;
  }  
  @media (max-width: 1024px){
    .blurbsreview{{ section.id }} .obj-data02{
      padding: {{ item.blurbpadding_mobile }};
    }
    .blurbsreview{{ section.id }} .tt-block-title{
      padding-bottom: {{ item.titlepadding_mobile }}px;
    }
    .blurbsreview{{ section.id }} .tt-block-title .tt-title{
      font-size: {{ item.fontsizemtitle_mobile }}px;
      line-height: {{ item.lineheightmtitle_mobile }}px;
    }
    .blurbsreview{{ section.id }} .tt-block-title .tt-description{
      margin-top: {{ item.toppaddingmdesc_mobile }}px;
      font-size: {{ item.fontsizemdesc_mobile }}px;
      line-height: {{ item.lineheightmdesc_mobile }}px;
    }
    .blurbsreview{{ section.id }} .obj-data02__title {
      margin-top: {{ item.toppaddingititle_mobile }}px;
      font-size: {{ item.fontsizeititle_mobile }}px;
      line-height: {{ item.lineheightititle_mobile }}px;
    }
    .blurbsreview{{ section.id }} .obj-data02__text {
      margin-top: {{ item.toppaddingidesc_mobile }}px;
      font-size: {{ item.fontsizeidesc_mobile }}px;
      line-height: {{ item.lineheightidesc_mobile }}px;
    }
    .blurbsreview{{ section.id }} .obj-data02__author {
      margin-top: {{ item.toppaddingauthorreview_mobile }}px;
      font-size: {{ item.fontsizeauthorreview_mobile }}px;
      line-height: {{ item.lineheightauthorreview_mobile }}px;
    }
    .blurbsreview{{ section.id }} .obj-data02__data {
      margin-top: {{ item.toppaddingdate_mobile }}px;
      font-size: {{ item.fontsizedate_mobile }}px;
      line-height: {{ item.lineheightdate_mobile }}px;
    }
    .obj-data02 .obj-data02__img {
      margin-top: {{ item.toppaddingimage_mobile }}px;
    }
  }

  {%- for block in section.blocks -%}
  {%- assign b_i = block.settings -%}
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__img img {
    height: {{ b_i.useimagesize | split: 'x' | last }}px;
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} {
    {% assign opacity = b_i.opacity | divided_by: 100.00 %}
    background: {{ b_i.bgcolor | color_modify: 'alpha', opacity }};
    border: {{ b_i.border }}px solid {{ b_i.bordercolor }};
    {{ b_i.item_custom_styles }}
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__title,
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__title a{
    color: {{ b_i.colortext1 }};
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__title a:hover{
    color: {{ b_i.colortext1_hover }};
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__text{
    color: {{ b_i.colortext2 }};
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__author{
    color: {{ b_i.colortext3 }};
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__data{
    color: {{ b_i.colortext4 }};
  }
  .blurbsreview{{ section.id }} .obj-data02{{ block.id }} .obj-data02__rating .tt-trim {
    width: {{ b_i.rating | times: 100 | divided_by: 5 }}%;
  }
  {%- endfor -%}
  
  .blurbsreview{{ section.id }} .obj-data02-wrapper.slick-slider .slick-dots li button{
    background: {{ item.sliderbutton }};
  }
  .blurbsreview{{ section.id }} .obj-data02-wrapper.slick-slider .slick-dots .slick-active button,
  .blurbsreview{{ section.id }} .obj-data02-wrapper.slick-slider .slick-dots li:hover button {
    background: {{ item.sliderbutton_hover }};
  }
</style>

