{%- assign item = section.settings -%}

{% assign _pr = all_products[item.product] %}
{% assign sel_or_first_av_var = _pr.selected_or_first_available_variant %}

{%- assign product_meta = _pr.metafields.description -%}
{%- assign sale_on = false -%}
{%- assign shownewicon = false -%}
{%- if sel_or_first_av_var.compare_at_price > sel_or_first_av_var.price -%}
	{%- assign sale_on = true -%}
{%- endif -%}

{% capture imageitem %}
<div class="col-12 col-md-6 col-lg-6">
  <a href="{{ _pr.url }}">
    <div class="custom-loader" style="display: none;">
      <div class="lds-ripple"><div></div><div></div></div>
    </div>
    <div class="productandvideoimg">
      <img class="lazyload"
         data-src="{{ _pr.featured_image.src | product_img_url: '300x' }}"
         data-srcset="{% include 'lazyload_string' value: _pr.featured_image %}"
         alt="{{ _pr.featured_image.alt | escape }}"/>
    </div>
  </a>
</div>
{% endcapture %}
{% capture productitem %}
<div class="col-12 col-md-6 col-lg-5">
  <div class="singleproductinfo">
    {% if item.show_custom_text_1 %}<div class="custom-text-1">{{ item.custom_text_1 }}</div>{% endif %}
    {% if item.show_custom_text_2 %}<div class="custom-text-2">{{ item.custom_text_2 }}</div>{% endif %}
    
    {%- unless product_meta.countdown == blank -%}
    {%- if item.showcountdown -%}
    <div class="tt-countdown_box_02 tt-type-02">
      <div class="tt-countdown_inner">
        <div class="tt-countdown" data-date="{{ product_meta.countdown }}">
        </div>
      </div>
    </div>
    {%- endif -%}
    {%- endunless -%}
    
    {% if item.show_product_availability %}
    <div class="availability">
      <span>{{ 'products.product.availability' | t }}</span>
      {% if _pr.available %}
      <span class="stock_quantity hide"></span> <span class="in_stock hide">{{ 'products.product.in_stock' | t }}</span> <span class="many_in_stock hide">{{ 'products.product.many_in_stock' | t }}</span> <span class="sold_out hide">{{ "products.product.sold_out" | t }}</span> <span class="continue_out hide">{{ "products.product.purchase_when_out_of_stock" | t }}</span>
      {% else %}
      <span class="sold_out">{{ "products.product.sold_out" | t }}</span>
      {% endif %}
    </div>
    {% endif %}

    <h2 class="tt-title"><a href="{{ _pr.url }}">{{ _pr.title }}</a></h2>
    
    {%- if item.product_item_show_price -%}
    {%- if sale_on -%}
    <div class="tt-price"><span class="new-price">{{ sel_or_first_av_var.price | money }}</span><span class="old-price">{{ sel_or_first_av_var.compare_at_price | money }}</span></div>
    {%- else -%}
    <div class="tt-price"><span>{{ sel_or_first_av_var.price | money }}</span><span class="old-price hide"></span></div>
    {%- endif -%}
    {%- endif -%}
    
    {%- if item.product_item_show_small_description -%}
    <div class="tt-pr-small-desc">
      {{ item.product_item_small_description }}
    </div>
    {%- endif -%}

    {% if _pr.variants.size >= 1 and _pr.variants[0].title != "Default Title" %}
    <div class="col-select">
      <form class="form-default">
        {% if item.show_variants_field_name %}<label>{{ item.variants_field_name }}</label>{% endif %}
        <select class="form-control tt-obj-dark">
          {% for variant in _pr.variants %}
          
          <option{% if variant.available == false and settings.show_unavailable_variants == false %} class="disabled"{% endif %}{% if variant == _pr.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
            {{ variant.title }}
          </option>

          
          {% endfor %}
        </select>
      </form>
    </div>{% endif %}
    
    {%- if item.product_item_show_button -%}
    <div class="tt-button-box">
      {%- form 'product', _pr -%}
        <input type="hidden" class="input_variant" name="id" value="{{ sel_or_first_av_var.id }}">
        
        <div class="tt-row-custom-01">
          {% if _pr.available %}
          <div class="col-item{% unless item.show_input %} hide{% endunless %}">
            <div class="tt-input-counter style-01">
              <span class="minus-btn"></span>
              <input type="text" name="quantity" value="1" size="5">
              <span class="plus-btn"></span>
            </div>
          </div>
          {% endif %}
          <div class="col-item">          
            <button class="btn btn-lg btn-addtocart{% if settings.ajax_addtocart %} addtocart-js{% endif %}"
                    {%- if settings.show_addtocart_popup_related -%}{%- unless _pr.metafields.description.related_collection == blank -%}data-relatedcollection="{{ _pr.metafields.description.related_collection }}"{%- endunless -%}{%- endif -%}
                    >
              {% unless sel_or_first_av_var.available %}
              {{ 'products.general.unavailable_html' | t }}
              {% else %}
              {% if sel_or_first_av_var.inventory_management == 'shopify' and sel_or_first_av_var.inventory_policy == 'continue' and sel_or_first_av_var.inventory_quantity == 0 %}
              {{ "products.general.preorder_html" | t }}		
              {% else %}
              {{ 'products.general.add_to_cart_html' | t }}
              {% endif %}
              {% endunless %}
            </button>
          </div>
        </div>
      {% endform %}
    </div>
    {%- endif -%}
    
  </div>
</div>
{% endcapture %}

<div class="prvidsec{{ section.id }} sectionsingleproduct {% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent {{ item.custom_classes }}"
