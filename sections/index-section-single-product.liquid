     data-quantity="{% for variant in _pr.variants %}{% if variant.inventory_policy == "continue" %}{{ variant.id }}-continue{{ variant.inventory_quantity }};{% else %}{{ variant.id }}-{{ variant.inventory_quantity }};{% endif %}{% endfor %}" 
     data-prurl="{{ _pr.handle }}">
  {% if item.usebgcolor %}<div{% if item.showbgimage %} style="background-image: url({{ item.image | img_url: '2048x' }});"{% endif %}>{% endif %}
  <div class="container container-fluid-custom-mobile-padding">
    {%- if item.show_title -%}
    <div class="tt-block-title{% if item.title_to_left %} text-left{% endif %}">
      <h2 class="tt-title">{{ item.titletext1 }}</h2>
      {%- unless item.titletext2 == '' -%}<div class="tt-description">{{ item.titletext2 }}</div>{%- endunless -%}
    </div>
    {%- endif -%}    
    <div class="row justify-content-between align-items-center{% if item.reverse %} productandvideosection-reverse{% endif %}">
      {% if item.reverse %}
      {{ productitem }}
      {{ imageitem }}
      {% else %}
      {{ imageitem }}
      {{ productitem }}
      {% endif %}
    </div>
  </div>
  {% if item.usebgcolor %}</div>{% endif %}
</div>

