    color: {{ item.bg_form_text }};
  }
  .subsection{{ section.id }} .form-default ::-moz-placeholder {
    color: {{ item.bg_form_text }};
  }
  .subsection{{ section.id }} .form-default :-moz-placeholder {
    color: {{ item.bg_form_text }};
  }
