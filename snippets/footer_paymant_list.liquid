{%- if pay_icons != '' and pay_icons.settings.show_content -%}
{% unless item.footer_col %}<div class="tt-col-right">{% endunless %}
  <div class="tt-col-item">
    <ul class="tt-payment-list">
      {%- for i in (1..8) -%}
      {%- assign img = 'pay_icon_' | append: forloop.index -%}
      {%- assign img = pay_icons.settings[img] -%}
      {%- assign url = 'pay_url_' | append: forloop.index -%}
      {%- assign url = pay_icons.settings[url] -%}
      {%- if img != blank -%}
      <li>
        {% if url == blank %}
        <div>
        {% else %}
        <a href="{{ url }}">
        {% endif %}
          {% assign imgsized = 'x' | append: pay_icons.settings.payments_icons_max_height %}
          {% assign imgsizer = pay_icons.settings.payments_icons_max_height | times: 2 %}
          {% assign imgsizer = 'x' | append: imgsizer %}
          <img class="lazyload"
               data-src="{{ img | img_url: imgsized }}"
               data-srcset="{{ img | img_url: imgsized }} 1x, {{ img | img_url: imgsizer }} 2x"
               alt="{{ img.alt }}"
               style="height:{{ pay_icons.settings.payments_icons_max_height }}px;">
        {% if url != blank %}
        </a>
        {% else %}
        </div>
        {% endif %}
      </li>
      {%- endif -%}{%- endfor -%}
    </ul>
  </div>
{% unless item.footer_col %}</div>{% endunless %}
{%- endif -%}