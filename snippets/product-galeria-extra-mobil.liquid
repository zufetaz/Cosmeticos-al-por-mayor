

<div class="containedor-mobil">
  
  
  <ul class="slider-mobil">
    {%for media in product.media %}
    
      <li id="slide-{{media.id}}">
        {% if media.alt contains "iframe" %}
        	{{ media.alt }}
        {% else %}
            <img src="{{ media.src | img_url : '1024x1024' }}"/>
        {% endif %} 
      </li>
   
    {%endfor%}

  </ul>
  
  <ul class="menu-mobil"> 
    {% for media in product.media %}
      <li>
        <a href="#slide-{{media.id}}">
          <img src="{{ media.src | img_url }}"/>
        </a>
      </li>
    {% endfor %}
    
  </ul>
  
</div>



<style>
 .containedor-mobil{
  margin: auto;
  background-color: white;
  width: 100%;
  padding: 2px;
}

ul, li {
    padding: 0;
    margin: 0;
    list-style: none;
}

ul.slider-mobil{
  position: relative;
  width: 100%;
  height: 300px;
}

ul.slider-mobil li {
    position: absolute;
    left: 0px;
    top: 0px;
    opacity: 0;
    width: inherit;
    height: inherit;
    transition: opacity .5s;
    background:#fff;
}

ul.slider-mobil li img{
  width: 100%;
  height: 300px;
  object-fit: cover;
  
}

  ul.slider-mobil li iframe{
  	height: 400px;
    margin-top: 10%;
  }

ul.slider-mobil li:first-child {
    opacity: 1; /*Mostramos el primer <li>*/
}

ul.slider-mobil li:target {
    opacity: 1; /*Mostramos el <li> del enlace que pulsemos*/
}

.menu-mobil{
  text-align: center;
  margin: 20px;
}

.menu-mobil li{
  display: inline-block;
  text-align: center;
}

.menu-mobil li a{
  display: inline-block;
  color: white;
  text-decoration: none;
  background-color: #fff;
  padding: 3px;
  width: 70px;
  height: 70px;
  font-size: 20px;
  border-radius: 0%;
}
.menu-mobil li a img {
  width:70px;
  height:70px;
}
 

</style>


